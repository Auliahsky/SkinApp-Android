<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistAgent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/spls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="57dp"
            android:background="@drawable/splash" />

        <TextView
            android:id="@+id/let_s_get_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="124dp"
            android:layout_below="@+id/spls"
            android:layout_marginTop="16dp"
            android:text="Let's Get Started"
            android:gravity="center_horizontal|top"
            />

        <TextView
            android:id="@+id/create_an_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="124dp"
            android:layout_below="@+id/let_s_get_s"
            android:layout_marginTop="8dp"
            android:text="To be agent"
            android:textColor="#9098B1"
            android:gravity="center_horizontal|top"
            />

        <!-- Full Name Form -->
        <EditText
            android:id="@+id/usrname"
            android:layout_width="343dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="34dp"
            android:layout_below="@+id/create_an_n"
            android:layout_marginTop="28dp"
            android:background="@drawable/fullnameform"
            android:hint="User Name"
            android:paddingLeft="50dp"
            />

        <EditText
            android:id="@+id/email_regform"
            android:layout_width="343dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="34dp"
            android:layout_below="@+id/usrname"
            android:layout_marginTop="8dp"
            android:hint="Your Email"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:paddingLeft="50dp"
            android:background="@drawable/emailregform"
            />

        <!-- Password Form -->
        <EditText
            android:inputType="textPassword"
            android:id="@+id/password_fo"
            android:layout_width="343dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="34dp"
            android:layout_below="@+id/email_regform"
            android:layout_marginTop="8dp"
            android:hint="Password"
            android:maxLines="1"
            android:paddingLeft="50dp"
            android:background="@drawable/passform"
            />

        <ImageView
            android:id="@+id/eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_regform"
            android:layout_marginTop="22dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:src="@drawable/ic_eye_off"
            tools:ignore="ContentDescription">
        </ImageView>

        <!-- Password Again From -->
        <EditText
            android:id="@+id/notelp"
            android:layout_width="343dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="34dp"
            android:layout_below="@+id/password_fo"
            android:layout_marginTop="8dp"
            android:hint="Number Phone"
            android:maxLines="1"
            android:paddingLeft="50dp"
            android:background="@drawable/passagainform"
            />

        <Button
            android:id="@+id/sign_up_but"
            android:layout_width="343dp"
            android:layout_height="57dp"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="34dp"
            android:layout_below="@id/notelp"
            android:layout_marginTop="16dp"
            android:text="sign up"
            android:elevation="30dp"
            android:paddingBottom="10dp"
            android:background="#40BFFF"
            android:textColor="#FFFFFF"
            />

        <!-- have a account? Sign In -->
        <TextView
            android:id="@+id/have_a_acco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginHorizontal="120dp"
            android:layout_below="@+id/sign_up_but"
            android:layout_marginTop="24dp"
            android:text="have account?"
            />

        <TextView
            android:id="@+id/sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sign_up_but"
            android:layout_marginTop="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="120dp"
            android:text="Sign In"
            android:textColor="#40BFFF"
            />


    </RelativeLayout>



</ScrollView>