<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Addproduk">
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btn_image1"
                    android:layout_width="196dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:src="@drawable/picture"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/keterangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#000"
                    android:textAlignment="center"
                    tools:ignore="HardcodedText">
                </TextView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/nmprod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Produk Name"
                        android:inputType="text"
                        android:background="@drawable/background"
                        android:textAppearance="@style/inputan"
                        android:layout_marginTop="0dp"
                        android:drawablePadding="10dp"
                        android:layout_marginHorizontal="30dp"
                        android:padding="20dp"
                        android:importantForAutofill="no"/>

                    <EditText
                        android:id="@+id/descprod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Produck Description"
                        android:inputType="text"
                        android:layout_below="@+id/nmprod"
                        android:background="@drawable/background"
                        android:textAppearance="@style/inputan"
                        android:layout_marginTop="10dp"
                        android:drawablePadding="10dp"
                        android:layout_marginHorizontal="30dp"
                        android:padding="20dp"
                        android:importantForAutofill="no"/>

                    <EditText
                        android:id="@+id/harga"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Price"
                        android:inputType="text"
                        android:layout_below="@+id/descprod"
                        android:background="@drawable/background"
                        android:textAppearance="@style/inputan"
                        android:layout_marginTop="10dp"
                        android:drawablePadding="10dp"
                        android:layout_marginHorizontal="30dp"
                        android:padding="20dp"
                        android:importantForAutofill="no"/>

                    <EditText
                        android:id="@+id/kategori"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Categori"
                        android:inputType="text"
                        android:layout_below="@+id/harga"
                        android:background="@drawable/background"
                        android:textAppearance="@style/inputan"
                        android:layout_marginTop="10dp"
                        android:drawablePadding="10dp"
                        android:layout_marginHorizontal="30dp"
                        android:padding="20dp"
                        android:importantForAutofill="no"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btn_addproduk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="50dp"
                        android:layout_marginTop="20dp"
                        android:background="#80707654"
                        android:text="Add Produck"
                        android:textAppearance="@style/btn_addprod"
                        style="?android:attr/borderlessButtonStyle">
                    </Button>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
            
    </ScrollView>

</LinearLayout>