<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Fragemailmodif"
    android:id="@+id/fragemailtmodify">

    <include
        android:id="@+id/toolbaremailmodif"
        layout="@layout/toolbaremailmodif"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbaremailmodif"
        android:layout_marginTop="23dp"
        android:text="Email"
        android:textColor="#000"
        android:textSize="24dp"
        android:paddingLeft="16dp"
        android:gravity="top"
        />

    <TextView
        android:id="@+id/actual_emai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_marginTop="42dp"
        android:text="Actual email address"
        android:textSize="18dp"
        android:textColor="#000"
        android:paddingLeft="24dp"
        android:gravity="top"
        />

    <TextView
        android:id="@+id/jasmine_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actual_emai"
        android:layout_marginTop="4dp"
        android:text="Jasmine@gmail.com"
        android:textColor="#0001FC"
        android:textSize="16dp"
        android:paddingLeft="24dp"
        android:gravity="top"
        />

    <TextView
        android:id="@+id/new_email_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jasmine_email"
        android:layout_marginTop="57dp"
        android:text="New email adress"
        android:textSize="18dp"
        android:textColor="#000"
        android:paddingLeft="24dp"
        android:gravity="top"
        />


    <EditText
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="24dp"
        android:layout_below="@id/new_email_a"
        android:layout_marginTop="8dp"
        android:background="@drawable/bagemailmodif"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:paddingLeft="17dp"
        />

    <TextView
        android:id="@+id/confirm_emai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/background"
        android:layout_marginTop="57dp"
        android:text="Confirm email adress"
        android:textSize="18dp"
        android:textColor="#000"
        android:paddingLeft="24dp"
        android:gravity="top"
        />

    <EditText
        android:id="@+id/background2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="24dp"
        android:layout_below="@id/confirm_emai"
        android:layout_marginTop="8dp"
        android:background="@drawable/bagemailmodif"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:paddingLeft="17dp"
        />

    <Button
        android:id="@+id/sign_in_but"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginHorizontal="24dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_below="@id/background2"
        android:elevation="30dp"
        android:text="Confirm modification"
        android:paddingBottom="10dp"
        android:background="#40BFFF"
        android:textColor="#FFFFFF"/>

</RelativeLayout>